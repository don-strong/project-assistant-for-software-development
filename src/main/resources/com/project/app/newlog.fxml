<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.app.controller.LogController">
<!--            xmlns="http://javafx.com/javafx/25"-->


    <!-- PROBLEM LABEL AND TEXTFIELD -->
    <Text layoutX="26.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Problem">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="problemField"
               layoutX="26.0" layoutY="104.0"
               prefWidth="542.0" prefHeight="25.0"
               promptText="Enter Problem"/>

    <!-- SOLUTION LABEL AND TEXTFIELD -->
    <Text layoutX="26.0" layoutY="169.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Solution">
        <font>
            <Font size="18.0"/>
        </font>
    </Text>
    <TextField fx:id="solutionField"
               layoutX="26.0" layoutY="182.0"
               prefWidth="542.0" prefHeight="25.0"
               promptText="Enter Solution"/>

    <!-- SAVE BUTTON -->
    <Button fx:id="saveButton"
            layoutX="512.0" layoutY="323.0"
            prefWidth="62.0" prefHeight="35.0"
            text="Save"
            mnemonicParsing="false"
            onAction="#handleSave"/>
</AnchorPane>