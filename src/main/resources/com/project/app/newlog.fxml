<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.project.app.controller.LogController">
<!--            xmlns="http://javafx.com/javafx/25"-->


    <!-- PROBLEM LABEL AND TEXTFIELD -->
    <Text layoutX="25.0" layoutY="173.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Problem:">
        <font>
            <Font size="18.0" />
        </font>
    </Text>
    <TextField fx:id="problemField" layoutX="26.0" layoutY="180.0" prefHeight="59.0" prefWidth="542.0" promptText="Enter Problem" />

    <!-- SOLUTION LABEL AND TEXTFIELD -->
    <Text layoutX="31.0" layoutY="272.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Solution:">
        <font>
            <Font size="18.0" />
        </font>
    </Text>
    <TextField fx:id="solutionField" layoutX="29.0" layoutY="279.0" prefHeight="59.0" prefWidth="542.0" promptText="Enter Solution" />
   
    <!-- ID LABEL AND TEXTFIELD -->
    <Text layoutX="25.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="ID:">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <TextField fx:id="idField" layoutX="51.0" layoutY="13.0" prefHeight="25.0" prefWidth="66.0" promptText="Ex. 1, 2, 3" />
   
   <!-- KEYWORDS LABEL AND TEXTFIELD -->
   <Text layoutX="25.0" layoutY="91.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Keywords:">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <TextField fx:id="keywordField" layoutX="26.0" layoutY="105.0" prefHeight="25.0" prefWidth="542.0" promptText="Enter Keywords" />
    
   <!-- LANGUAGE LABEL AND TEXTFIELD -->
   <Text layoutX="131.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Language:">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <TextField fx:id="languageField" layoutX="222.0" layoutY="13.0" prefHeight="25.0" prefWidth="123.0" promptText="Coding Launguage" />

   <!-- IDE LABEL AND TEXTFIELD -->
   <Text layoutX="351.0" layoutY="33.0" strokeType="OUTSIDE" strokeWidth="0.0" text="IDE:">
      <font>
         <Font size="18.0" />
      </font>
   </Text>
   <TextField fx:id="ideField" layoutX="389.0" layoutY="14.0" prefHeight="25.0" prefWidth="154.0" promptText="IDE Name" />

    <!-- SAVE BUTTON -->
    <Button fx:id="saveButton" layoutX="512.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleSave" prefHeight="35.0" prefWidth="62.0" text="Save" />
   
</AnchorPane>
