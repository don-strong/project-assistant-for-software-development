<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.app.controller.ReminderController">
<!--            xmlns="http://javafx.com/javafx/25"-->


    <!-- REMINDER TEXT -->
    <Text layoutX="188.0" layoutY="164.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Timer Up!">
        <font>
            <Font size="48.0" />
        </font>
    </Text>

    <!-- BUTTONS IN HBOX -->
    <HBox layoutX="215.0" layoutY="192.0" spacing="20.0">
        <children>
            <Button fx:id="snoozeButton" mnemonicParsing="false" onAction="#handleSnooze" prefHeight="39.0" prefWidth="67.0" text="Snooze" />
            <Button fx:id="dismissButton" mnemonicParsing="false" onAction="#handleDismiss" prefHeight="39.0" prefWidth="67.0" text="Dismiss" />
        </children>
    </HBox>

</AnchorPane>