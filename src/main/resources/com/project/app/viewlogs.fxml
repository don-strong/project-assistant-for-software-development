<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.collections.FXCollections?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.app.controller.LogController">
<!--            xmlns="http://javafx.com/javafx/25"-->


    <!-- SEARCH FIELD -->
    <TextField fx:id="searchField" layoutX="20.0" layoutY="10.0" prefWidth="200.0" promptText="Search" />

    <!-- TABLE OF LOGS -->
    <TableView fx:id="logsTable" editable="false" layoutX="0.0" layoutY="40.0" prefHeight="360.0" prefWidth="600.0">

        <items>
            <FXCollections fx:factory="observableArrayList"/>
        </items>

        <columns>
            <TableColumn fx:id="idColumn" prefWidth="42.00006103515625" text="ID" />
            <TableColumn fx:id="languageColumn" prefWidth="91.33330917358398" text="Language" />
            <TableColumn fx:id="ideColumn" prefWidth="84.66671752929688" text="IDE" />
            <TableColumn fx:id="problemColumn" prefWidth="182.00001525878906" text="Problem" />
         <TableColumn fx:id="solutionColumn" prefWidth="197.99996948242188" text="Solution" />
        </columns>
    </TableView>
   <Button fx:id="refreshButton" layoutX="534.0" layoutY="10.0" mnemonicParsing="false" onAction="#refreshLogs" text="Refresh" />

</AnchorPane>
