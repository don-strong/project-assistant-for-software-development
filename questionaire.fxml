<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.QuestionnaireController">

    <!-- HEADER -->
    <Text layoutX="153.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="How Can I Help You Today?">
        <font>
            <Font size="24.0" />
        </font>
    </Text>

    <!-- WORK SESSION LENGTH -->
    <Text layoutX="30.0" layoutY="89.0" text="Select your preferred session length:">
      <font>
         <Font size="16.0" />
      </font></Text>
    <VBox layoutX="33.0" layoutY="100.0" spacing="5.0">
        <children>
            <RadioButton fx:id="session25Radio" mnemonicParsing="false" text="10 minutes">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
            <RadioButton fx:id="session50Radio" mnemonicParsing="false" text="20 minutes">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
         <RadioButton fx:id="session25Radio1" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text=" 30 minutes">
            <font>
               <Font size="14.0" />
            </font>
         </RadioButton>
        </children>
    </VBox>

    <!-- BREAK REMINDERS -->
    <Text layoutX="30.0" layoutY="200.0" text="Break reminders:">
      <font>
         <Font size="16.0" />
      </font></Text>
    <VBox layoutX="33.0" layoutY="216.0" spacing="5.0">
        <children>
            <CheckBox fx:id="audioCheck" mnemonicParsing="false" text="Audio">
            <font>
               <Font size="14.0" />
            </font></CheckBox>
            <CheckBox fx:id="popupCheck" mnemonicParsing="false" text="Popup">
            <font>
               <Font size="14.0" />
            </font></CheckBox>
            <CheckBox fx:id="motivationCheck" mnemonicParsing="false" text="Motivational message">
            <font>
               <Font size="14.0" />
            </font></CheckBox>
        </children>
    </VBox>

    <!-- FOCUS AREA -->
    <Text layoutX="30.0" layoutY="322.0" text="Today's main focus:">
      <font>
         <Font size="16.0" />
      </font></Text>
    <VBox layoutX="33.0" layoutY="336.0" spacing="5.0">
        <children>
            <RadioButton fx:id="workRadio" mnemonicParsing="false" text="Work">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
            <RadioButton fx:id="studyRadio" mnemonicParsing="false" text="Study">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
            <RadioButton fx:id="exerciseRadio" mnemonicParsing="false" text="Exercise">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
            <RadioButton fx:id="personalRadio" mnemonicParsing="false" text="Personal">
            <font>
               <Font size="14.0" />
            </font></RadioButton>
        </children>
    </VBox>

    <!-- OPEN ENDED FEEDBACK -->
    <Text layoutX="30.0" layoutY="463.0" text="Any additional notes or goals?">
      <font>
         <Font size="16.0" />
      </font></Text>
    <TextField fx:id="notesField" layoutX="30.0" layoutY="477.0" prefWidth="500.0" promptText="Enter notes here" />

    <!-- SAVE BUTTON -->
    <Button fx:id="saveButton" layoutX="500.0" layoutY="530.0" onAction="#handleSave" prefHeight="35.0" prefWidth="70.0" text="Save" />

</AnchorPane>
